{
  "ts-node": {
    "files": true
  },
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": ["es2020", "dom"],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "@definitions/*": ["./src/definitions/*"],
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": ["./types/chai-pattern/*"]
}
